package com.meli.status.api.response;

import java.sql.Timestamp;
import java.util.Date;

import com.meli.status.model.TotalChargeInfoTO;
import com.meli.status.model.TotalPaymentInfoTO;

public class StatusUsuarioResponse {

	private Integer userId;
	private Integer totalCharge;
	private Double amountTotalCargos;
	private Date lastCharge;
	private Integer totalPayment;
	private Double amountTotalPagos;
	private Date lastPago;
	private Double deuda;

	public StatusUsuarioResponse(Integer userId, TotalChargeInfoTO totalInfoCharge, TotalPaymentInfoTO totalPaymentInfo) {
		setUserId(userId);
		//FIXME
		setAmountTotalCargos(totalInfoCharge.getTotalCharge());
		setLastCargo(totalInfoCharge.getLastCharge());
		
	}

	public Integer getUserId() {
		return userId;
	}

	public void setUserId(Integer userId) {
		this.userId = userId;
	}

	public Integer getTotalCargos() {
		return totalCharge;
	}

	public void setTotalCargos(Integer totalCargos) {
		this.totalCharge = totalCargos;
	}

	public Double getAmountTotalCargos() {
		return amountTotalCargos;
	}

	public void setAmountTotalCargos(Double amountTotalCargos) {
		this.amountTotalCargos = amountTotalCargos;
	}

	public Timestamp getLastCargo() {
		return lastCharge;
	}

	public void setLastCargo(Timestamp lastCargo) {
		this.lastCharge = lastCargo;
	}

	public Integer getTotalPagos() {
		return totalPayment;
	}

	public void setTotalPagos(Integer totalPagos) {
		this.totalPayment = totalPagos;
	}

	public Double getAmountTotalPagos() {
		return amountTotalPagos;
	}

	public void setAmountTotalPagos(Double amountTotalPagos) {
		this.amountTotalPagos = amountTotalPagos;
	}

	public Timestamp getLastPago() {
		return lastPago;
	}

	public void setLastPago(Timestamp lastPago) {
		this.lastPago = lastPago;
	}

	public Double getDeuda() {
		return deuda;
	}

	public void setDeuda(Double deuda) {
		this.deuda = deuda;
	}

}
