package com.meli.status.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.core.env.Environment;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.meli.status.model.TotalChargeInfoTO;

@Service
public class PaymentService {

	private static final String URL_PAYMENT_SERVICE = "payment.api.url";

	@Autowired
	private Environment env;

	public TotalChargeInfoTO getTotalCharge(Integer userId) {
		String urlPaymentAPI = env.getProperty(URL_PAYMENT_SERVICE);
		RestTemplate restTemplate = new RestTemplate();
		ResponseEntity<TotalChargeInfoTO> forEntity = restTemplate.getForEntity(urlPaymentAPI + "/total/" + userId, TotalChargeInfoTO.class);
		return forEntity.getBody();
	}

}
