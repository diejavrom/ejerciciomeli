package com.ml.cobranzasmeli.model;

import java.sql.Timestamp;

import javax.persistence.Column;
import javax.persistence.Embedded;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.persistence.Transient;

import org.springframework.data.mongodb.core.mapping.Document;

@Document(collection = "currency")
public class CurrencyConversion {

	private Integer id;
	private Timestamp since;
	private Timestamp until;
	private Double conversionfactor;
	private Currency currency;

	public CurrencyConversion() {
	}

	@Id
	@GeneratedValue
	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}
	
	@Column(name = "SINCE", nullable = false)	
	public Timestamp getSince() {
		return since;
	}

	public void setSince(Timestamp since) {
		this.since = since;
	}

	@Column(name = "UNTIL", nullable = true)	
	public Timestamp getUntil() {
		return until;
	}

	public void setUntil(Timestamp until) {
		this.until = until;
	}

	@Column(name = "CONV_FACTOR", nullable = false)	
	private Double getConversionfactor() {
		return conversionfactor;
	}

	public void setConversionfactor(Double conversionfactor) {
		this.conversionfactor = conversionfactor;
	}

	@Embedded	
	public Currency getCurrency() {
		return currency;
	}

	public void setCurrency(Currency currency) {
		this.currency = currency;
	}

	public double convert(Double amount) {
		return amount * getConversionfactor();
	}

	@Transient
	public boolean isCurrencyPredeterminado() {
		return currency.getPredeterminado();
	}

}