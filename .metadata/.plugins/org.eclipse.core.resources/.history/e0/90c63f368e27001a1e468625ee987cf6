package com.meli.currency.api;

import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;
import org.mockito.junit.MockitoJUnitRunner;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;

import com.meli.currency.exception.ParamMandatoryException;
import com.meli.currency.service.CurrencyService;

@RunWith(MockitoJUnitRunner.class)
@ContextConfiguration(classes = CurrencyRestController.class)
public class CurrencyConversionRestTest {

	@Autowired
    @InjectMocks
    private CurrencyRestController currencyRest;

	@Mock
	private CurrencyService currencyService;

    @Before
    public void setup() {
        MockitoAnnotations.initMocks(this);
    }	

    @Test(expected = ParamMandatoryException.class)
    public void testAmountParamMandatory() {
    	currencyRest.convert("USD", null);
    }

    @Test(expected = ParamMandatoryException.class)
    public void testCurrencyParamMandatory() {
    	currencyRest.convert(null, 20d);
    }

}
